[root@serv1 opt]# cat devopsengineer.sh

#!/bin/bash

##############################################
# AUTHOR: MADHU
# DATE: 1 JAN 2024
#
########################################

set -x
set -e
cd /opt
echo "ENTER THE NAME OF THE DEVOPS ENGINNER"
read name

mkdir $name
cd name

touch linux jenkins maven docker k8s
mkdir aws
cd aaws
touch ec2 route53 s3


